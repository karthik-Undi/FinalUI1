@model FinalUI1.Models.ViewModels.OneForAll

@{
    ViewBag.Title = "EmployeeView";
    Layout = "~/Views/Shared/_big.cshtml";
}


<div class="card">

    <!-- /.card-header -->

    <div class="card-header border-transparent">
        <h3 class="card-title">Employee Details</h3>

        <div class="card-tools">
            <button type="button" class="btn btn-tool" data-card-widget="collapse">
                <i class="fas fa-minus"></i>
            </button>
            <button type="button" class="btn btn-tool" data-card-widget="remove">
                <i class="fas fa-times"></i>
            </button>
        </div>
    </div>
    <!-- /.card-header -->




    <div class="card-body">
        <div id="example1_wrapper" class="dataTables_wrapper dt-bootstrap4">
            <div class="row">
                <div class="col-sm-12">
                    <table id="example1" class="table table-bordered table-striped dataTable dtr-inline" role="grid" aria-describedby="example1_info">
                        <tr>
                            <th>
                                Employee Name
                            </th>
                            <th>
                                Employee Department
                            </th>
                            <th>
                                Mobile Number
                            </th>
                            <th>
                                Email
                            </th>
                            <th></th>
                        </tr>

                        @foreach (var item in Model.employee)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.EmployeeName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.EmployeeRole)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.EmployeeMobileNo)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.EmployeeEmail)
                                </td>
                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.EmployeeID }) |
                                    @Html.ActionLink("Details", "Details", new { id = item.EmployeeID }) |
                                    @Html.ActionLink("Delete", "Delete", new { id = item.EmployeeID })
                                </td>
                            </tr>
                        }

                    </table>

                </div>
            </div>
        </div>
    </div>
</div>






