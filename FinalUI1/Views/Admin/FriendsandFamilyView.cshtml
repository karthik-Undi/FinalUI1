@model FinalUI1.Models.ViewModels.OneForAll

@{
    ViewBag.Title = "VisitorView";
    Layout = "~/Views/Shared/_big.cshtml";
}

<h2>VisitorView</h2>


<div class="card">

    <!-- /.card-header -->

    <div class="card-header border-transparent">
        <h3 class="card-title">Employee Details</h3>

        <div class="card-tools">
            <input id="search" type="text" placeholder="Search name">

            <button type="button" class="btn btn-tool" data-card-widget="collapse">
                <i class="fas fa-minus"></i>
            </button>

        </div>
    </div>
    <!-- /.card-header -->




    <div class="card-body">
        <div id="example1_wrapper" class="dataTables_wrapper dt-bootstrap4">
            <div class="row">
                <div class="col-sm-12">
                    <table id="example1" class="table table-bordered table-striped dataTable dtr-inline" role="grid" aria-describedby="example1_info">
                        <tr>
                            <th>
                                name
                            </th>
                            <th>
                                relation
                            </th>
                            <th>
                                residentname
                            </th>
                            <th></th>
                        </tr>

                        @foreach (var item in Model.friendsAndFamily)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.FaFName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.FaFRelation)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Resident.ResidentName)
                                </td>
                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.FaFID }) |
                                    @Html.ActionLink("Details", "Details", new { id = item.FaFID }) |
                                    @Html.ActionLink("Delete", "Delete", new { id = item.FaFID })
                                </td>
                            </tr>
                        }

                    </table>


                </div>
            </div>
        </div>
    </div>
</div>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script>
    $("#search").on("keyup", function () {
        var enteredText = $(this).val();
        $("table tr").each(function (results) {
            if (results !== 0) {
                var id = $(this).find("td:nth-child(1)").text();
                if (id.indexOf(enteredText) !== 0 && id.toLowerCase().indexOf(enteredText.toLowerCase()) < 0) {
                    $(this).hide();
                }
                else {
                    $(this).show();
                }
            }
        });

    });</script>






