@model FinalUI1.Models.ViewModels.OneForAll
@{
    ViewBag.Title = "ApproveRegistrations";
    Layout = "~/Views/Shared/_big.cshtml";
}

<h3 style="margin-left:10px" class="mt-4 mb-4">Approve Resident Registrations</h3>

<div class="card">

    <!-- /.card-header -->

    <div class="card-header border-transparent">
        <h3 class="card-title">Residents Details</h3>

        <div class="card-tools">
            <button type="button" class="btn btn-tool" data-card-widget="collapse">
                <i class="fas fa-minus"></i>
            </button>

        </div>
    </div>
    <!-- /.card-header -->




    <div class="card-body">
        <div id="example1_wrapper" class="dataTables_wrapper dt-bootstrap4">
            <div class="row">
                <div class="col-sm-12">
                    <table id="example1" class="table table-bordered table-striped dataTable dtr-inline" role="grid" aria-describedby="example1_info">
                        <tr>
                            <th>
                                Resident Name
                            </th>
                            <th>
                                House Number
                            </th>
                            <th>
                                Property Type
                            </th>
                            <th>
                                Mobile Number
                            </th>
                            <th>
                                Email
                            </th>
                            <th></th>
                        </tr>

                        @foreach (var item in Model.resident)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ResidentName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ResidentHouseNo)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ResidentType)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ResidentMobileNo)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ResidentEmail)
                                </td>
                                <td>
                                    @Html.ActionLink("Approve", "ApproveResident", new { id = item.ResidentID })
                                </td>
                            </tr>
                        }

                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<h3 style="margin-left:10px" class="mt-4 mb-4">Approve Employee Registrations</h3>

