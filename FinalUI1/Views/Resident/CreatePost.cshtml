@model FinalUI1.Models.DashboardPost

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_ResidentLayout.cshtml";
}


<div class="col-md-6">
    <div class="card card-primary">
        <div class="card-header">
            <h3 class="card-title">Post on the Noticeboard</h3>

            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                    <i class="fas fa-minus"></i>
                </button>
            </div>
        </div>
        <div class="card-body">
            <div class="form-group">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-group">
                        <label>Post Title</label><br />
                        @Html.EditorFor(model => model.PostTitle, new { htmlAttributes = new { placeholder = "Project ID", @class = "form-control" } })
                    </div>
                    <div class="form-group">

                        @Html.DropDownListFor(model => model.PostType, new List<SelectListItem>
                           {
                               new SelectListItem{Text="Announcement",Value="Announcement"},
                               new SelectListItem{Text="Invitation",Value="Invitation"},
                               new SelectListItem{Text="Request",Value="Request"},
                               new SelectListItem{Text="Suggestion",Value="Suggestion"},
                               new SelectListItem{Text="Promotion",Value="Promotion"},
                               new SelectListItem{Text="Other",Value="Other"}

                           }, "Select Post Type",
                           new { required = "required", @class = "form-control" })
                    </div>

                    <div class="form-group">
                        <label>Post Description</label><br />
                        @Html.TextAreaFor(model => model.PostDescription, new { rows = 8, @class = "form-control" })
                    </div>

                    <div class="form-group">
                        <label>Post Intended for</label><br />
                        @Html.EditorFor(model => model.PostIntendedFor, new { htmlAttributes = new { @class = "form-control" } })
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Post" class="btn btn-success" />
                        </div>
                    </div>
                }

            </div>
        </div>
    </div>
</div>