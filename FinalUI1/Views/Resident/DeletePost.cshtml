@model FinalUI1.Models.DashboardPost

@{
    ViewBag.Title = "DeletePost2";
    Layout = "~/Views/Shared/_ResidentLayout.cshtml";
}



<div class="col-md-6">
    <div class="card card-primary">
        <div class="card-header">
            <h3 class="card-title">Post on the Noticeboard</h3>

            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                    <i class="fas fa-minus"></i>
                </button>
            </div>
        </div>
        <div class="card-body">


            <h3>Are you sure you want to delete this?</h3>
            <div>
                <h4>DashboardPost</h4>
                <hr />
                <dl class="dl-horizontal">
                    <dt>
                        Post Title
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.PostTitle)
                    </dd>

                    <dt>
                        Post Type
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.PostType)
                    </dd>

                    <dt>
                        Post Content
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.PostDescription)
                    </dd>

                    <dt>
                        Post Intended for
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.PostIntendedFor)
                    </dd>

                    <dt>
                        Posted time
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.PostTime)
                    </dd>

                    <dt>
                        Posted by
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Resident.ResidentName)
                    </dd>

                </dl>

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-actions no-color">
                        <input type="submit" value="Delete" class="btn btn-danger" />

                        <a href='@Url.Action("VieworDeletePosts")'>
                            <input type="button" value="cancel" class="btn btn-primary" />
                        </a>

                    </div>
                }
            </div>
        </div>
    </div>
</div>
