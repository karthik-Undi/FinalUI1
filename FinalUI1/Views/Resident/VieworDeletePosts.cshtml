@model IEnumerable<FinalUI1.Models.DashboardPost>

@{
    ViewBag.Title = "CreatePost";
    Layout = "~/Views/Shared/_ResidentLayout.cshtml";
}

<h2>Posted By you</h2>

<p>
    @Html.ActionLink("Create New", "CreatePost")
</p>



<div class="card">

    <!-- /.card-header -->

    <div class="card-header border-transparent">
        <h3 class="card-title">Posted by You</h3>

        <div class="card-tools">

            <input id="search" type="text" placeholder="Search name">

            <button type="button" class="btn btn-tool" data-card-widget="collapse">
                <i class="fas fa-minus"></i>
            </button>
        </div>
    </div>
    <!-- /.card-header -->





    <div class="card-body">
        <div id="example1_wrapper" class="dataTables_wrapper dt-bootstrap4">
            <div class="row">
                <div class="col-sm-12">
                    <table id="example1" class="table table-bordered table-striped dataTable dtr-inline" role="grid" aria-describedby="example1_info">
                        <tr>
                            <th>
                                Title
                            </th>
                            <th>
                                Type
                            </th>
                            <th>
                                Content
                            </th>
                            <th>
                                Intended for
                            </th>
                            <th>
                                date and time
                            </th>
                            <th></th>
                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.PostTitle)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.PostType)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.PostDescription)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.PostIntendedFor)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.PostTime)
                                </td>
                                <td>
                                    @Html.ActionLink("Delete", "DeletePost", new { id = item.PostID })
                                </td>
                            </tr>
                        }

                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script>
    $("#search").on("keyup", function () {
        var enteredText = $(this).val();
        $("table tr").each(function (results) {
            if (results !== 0) {
                var id = $(this).find("td:nth-child(1)").text();
                if (id.indexOf(enteredText) !== 0 && id.toLowerCase().indexOf(enteredText.toLowerCase()) < 0) {
                    $(this).hide();
                }
                else {
                    $(this).show();
                }
            }
        });

    });</script>