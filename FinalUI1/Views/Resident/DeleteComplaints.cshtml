@model FinalUI1.Models.Complaint

@{
    ViewBag.Title = "DeleteComplaints2";
    Layout = "~/Views/Shared/_ResidentLayout.cshtml";
}
<div class="col-md-6">
    <div class="card card-primary">
        <div class="card-header">
            <h3 class="card-title">Delete Complaint</h3>

            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                    <i class="fas fa-minus"></i>
                </button>
            </div>
        </div>
        <div class="card-body">
            <h3>Are you sure you want to delete this?</h3>
            <div>
                <h4>Complaint</h4>
                <hr />
                <dl class="dl-horizontal">
                    <dt>
                        Complaint Details
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.ComplaintRegarding)
                    </dd>

                    <dt>
                        Status
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.ComplaintStatus)
                    </dd>

                </dl>

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-actions no-color">
                        <input type="submit" value="Delete" class="btn btn-default" />
                        <a href='@Url.Action("VieworDeleteComplaints")'>
                            <input type="button" value="cancel" class="btn btn-primary" />
                        </a>                    
                    </div>
                }
            </div>
        </div>
    </div>
</div>

